---
import {
    SITE_TITLE2_CURATION,
    CURATION_ROOT,
} from "@root/constants";

import BaseLayout from "@layouts/BaseLayout.astro";

interface Props {
    title: string;
    description: string;
    keywords: string[];
}

const {
    title,
    description,
    keywords,
} = Astro.props;
---

<BaseLayout
    title={title}
    title2={SITE_TITLE2_CURATION}
    title2url={CURATION_ROOT}
    description={description}
    keywords={keywords}
    noRightSidebar={true}
>
    <slot />
</BaseLayout>

