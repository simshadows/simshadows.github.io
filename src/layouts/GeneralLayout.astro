---
import BaseLayout from "@layouts/BaseLayout.astro";

interface Props {
    title: string;
    description: string;
    keywords: string[];
    hidetoc?: boolean;
    hidetitle?: boolean;
}

const {
    title,
    description,
    keywords,
    hidetoc = true,
    hidetitle = true,
} = Astro.props;
---

<BaseLayout
    title={title}
    description={description}
    keywords={keywords}
    noRightSidebar={hidetoc}
>
    {(!hidetitle) && <h1>{title}</h1>}
    <slot />
    <slot name="right-sidebar" slot="right-sidebar" />
</BaseLayout>

