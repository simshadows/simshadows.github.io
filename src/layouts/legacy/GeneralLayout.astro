---
import {
    SOURCE_CODE_URL,
} from "@root/constants";
import BaseLayout from "@layouts/legacy/BaseLayout.astro";

interface Props {
    title: string;
    description: string;
    keywords: string[];
}

const {
    title,
    description,
    keywords,
} = Astro.props;
---

<BaseLayout
    title={title}
    description={description}
    keywords={keywords}
>

    [ <a target="_self" href="/"><b>Home</b></a> ]
    [ <a href={SOURCE_CODE_URL}><b>Source</b></a> ]

    <slot />

    <footer>
