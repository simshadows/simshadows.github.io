---
import {
    SITE_TITLE,
    WEB_APPS_URL,
    BLOG_URL,
} from "@root/constants";
import BaseHead from "@components/BaseHead.astro";
import BaseFooter from "@components/BaseFooter.astro";
import "./_BaseLayout.css";

const {
    title,
    canonical,
    description,
    keywords,
} = Astro.props;
---

<!doctype html>

<!--
