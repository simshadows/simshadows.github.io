<html lang="en">
    <BaseHead
        title={title}
        description={description}
        keywords={keywords}
    >
        <style>
            body {
                padding: 0.5em;
            }

            span.inactive {
                font-style: italic;
                text-decoration: line-through;
            }
        </style>
    </BaseHead>
    <body>
        <slot />
    </body>
</html>

